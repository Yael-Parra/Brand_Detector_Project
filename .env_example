# =============================
# Configuración de la aplicación
# =============================
APP_NAME=YOLO Brand Detector
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# =============================
# Configuración del servidor
# =============================
HOST=localhost
PORT=8000
RELOAD=true

# =============================
# Configuración de CORS
# =============================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# =============================
# Configuración de base de datos
# =============================
# Estos datos los da neon.com al crear un proyecto
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brand_logo_detector_db
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Datos legacy (mantener por compatibilidad)
PGUSER=
PGPASSWORD=
DB_PROJECT=brand_logo_detector_db

# =============================
# Configuración de YOLO
# =============================
YOLO_MODEL_PATH=best_v5.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# =============================
# Configuración de archivos
# =============================
UPLOAD_DIR=backend/data/uploads
MAX_FILE_SIZE=52428800
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.bmp
ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv

# =============================
# Configuración de logging
# =============================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================
# Configuración de Redis (futuro)
# =============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================
# Configuración de seguridad
# =============================
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30